{
  "name": "catling",
  "version": "0.0.1-semantically-versioned",
  "description": "Monadic types for JavaScript and TypeScript",
  "author": {
    "name": "Harry Grumbar",
    "url": "https://github.com/harrygr"
  },
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "engineStrict": true,
  "engines": {
    "node": ">= 6.9.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/harrygr/catling"
  },
  "devDependencies": {
    "@types/jest": "~20.0.4",
    "@types/node": "~6.0.85",
    "jest": "~20.0.0",
    "rimraf": "~2.6.1",
    "tsutils": "~2.7.1",
    "typescript": "~2.4.2",
    "ts-jest": "^20.0.10"
  },
  "scripts": {
    "clean": "rimraf coverage build tmp",
    "build": "tsc -p tsconfig.build.json",
    "watch": "tsc -w -p tsconfig.build.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "license": "MIT",
  "dependencies": {

  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "parser": "typescript"
  },
  "jest": {
    "moduleFileExtensions": ["ts", "tsx", "js"],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": ["**/*.spec.(ts|tsx)"]
  },
  "release": {
    "verifyConditions": {
      "path": "./verifyConditions.js"
    }
  }
}
